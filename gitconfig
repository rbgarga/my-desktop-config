[user]
	name = Renato Botelho
	email = garga@FreeBSD.org
[core]
	pager = less -F -X
	ignorecase = false
[push]
	default = simple
[alias]
	co = checkout
	ctags = !.git/hooks/ctags
	chp = cherry-pick
[filter "hawser"]
	clean = git hawser clean %f
	smudge = git hawser smudge %f
	required = true
[merge]
	tool = gvimdiff
	conflictstyle = diff3
[sendemail]
	smtpEncryption = tls
	smtpServer = smtp.gmail.com
	smtpUser = garga.bsd@gmail.com
	smtpServerPort = 587
	smtpPass = *************
[fetch]
	prune = true
[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
[init]
	templatedir = ~/.git_template
